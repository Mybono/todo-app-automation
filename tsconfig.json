{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "src",
    "outDir": "dist",
    "strict": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "webdriverio", "@wdio/globals/types", "mocha"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "wdio.conf.ts"]
}
